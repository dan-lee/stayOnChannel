{
  "description": "Want the old YouTube channel behaviour back? Here's the solution! When you click a video in channel you will stay on this channel!",
  "name":        "YouTube™ Stay On Channel",
  "version":     "1.1",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "*://*.youtube.com/*",
    "*://youtube.com/*"
  ],
  "content_scripts": [{
    "matches": [
      "*://*.youtube.com/*",
      "*://youtube.com/*"
    ],
    "js": [
      "src/globals.js",
      "src/communicator.js",
      "src/playerTemplate.js",
      "src/stayOnChannel.js"
    ],
    "css": ["style.css"],
    "run_at": "document_end"
  }],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "48":  "icons/icon48_red.png",
    "128": "icons/icon128_red.png"
  },
  "browser_action": {
    "default_icon":  "icons/icon19_red.png",
    "default_title": "YouTube™ Stay On Channel"
  }
}